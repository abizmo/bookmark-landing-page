---
import Button from './ui/button.astro'

interface Props {
  logo: string
  browser: string
  version: string
  href: string
}

const {logo, browser, version, href} = Astro.props
---

<article class='shadow-lg rounded-lg'>
  <header class='py-10 text-center'>
    <img class='inline-block mb-9' src={logo} alt={browser} />
    <h4 class='mb-4 | card__title'>Add to {browser}</h4>
    <p>Minimum version {version}</p>
  </header>
  <main class='text-center | card__body'>
    <Button as='a' href={href} class='capitalize'>
      Add & install extension
    </Button>
  </main>
</article>

<style>
  .card__title {
    color: hsl(var(--clr-neutral-900));
    font-size: 1.25rem;
    font-weight: 500;
    line-height: 1.1;
  }

  .card__version {
    font-size: .875rem;
    line-height: 1.3;
  }

  .card__body {
    padding: 1.5rem;
    background-image: linear-gradient(to right, hsl(var(--clr-neutral-400)) 10%, rgba(255, 255, 255, 0) 0%);
    background-position: top;
    background-size: 24px 2px;
    background-repeat: repeat-x;
  }
</style>
